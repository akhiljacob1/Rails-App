<html>
  <head></head>
  <body>
    <div class="full-review">
      <% results = GoogleBooks.search("isbn:#{@book_review.book_id}")%>
      <div class="left-review">
        <div class="review-container">
          <h2><%= results.first.title%></h2>

          <p><%= @book_review.body %></p>
        </div>
        <div class="links">
          <%= link_to "Edit", edit_book_review_path(@book_review), class: "nav-link" %><br>
          <%= link_to "Delete", book_review_path(@book_review), class: "nav-link" ,
                            method: :delete,
                            data: { confirm: "Are you sure?" } %><br>
          <%= link_to "Book reviews", book_reviews_path, class: "nav-link"  %>
        </div>
      </div>

      <div class="right-pane">
        <% book = GoogleBooks.search("isbn:#{@book_review.book_id}").first %>
        <div class="title">
          <h2><%= book.title %></h2>
        </div>
        <div class="right-image">
          <img src="<%= book.image_link %>" class="card-img-top" alt="...">
        </div>
        <div class="meta">
          <div class=field>
            Author:<br>
            Publisher:<br>
            Published date:<br>
            ISBN:<br>
            Pages:<br>
            Rating:<br>
            Description:<br>
          </div>
          <div class="field">
            <%= book.authors %><br>
            <%= book.publisher %><br>
            <%= book.published_date %><br>
            <%= book.isbn %><br>
            <%= book.page_count %><br>
            <%= book.average_rating %><br>
            <%= book.description %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>