!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
  %body
    .full-review
      - results = GoogleBooks.search("isbn:#{@book_review.book_id}")
      .left-review
        .review-container
          %h2= results.first.title
          %p= @book_review.body
        .links
          = link_to "Edit", edit_book_review_path(@book_review), class: "nav-link"
          %br/
          = link_to "Delete", book_review_path(@book_review), class: "nav-link" , |
            method: :delete,                                                      |
            data: { confirm: "Are you sure?" }                                    |
          %br/
          = link_to "Book reviews", book_reviews_path, class: "nav-link"
      .right-pane
        - book = GoogleBooks.search("isbn:#{@book_review.book_id}").first
        .title
          %h2= book.title
        .right-image
          %img.card-img-top{:alt => "...", :src => "#{book.image_link}"}/
        .meta
          .field
            Author:
            %br/
            Publisher:
            %br/
            Published date:
            %br/
            ISBN:
            %br/
            Pages:
            %br/
            Rating:
            %br/
            Description:
            %br/
          .field
            = book.authors
            %br/
            = book.publisher
            %br/
            = book.published_date
            %br/
            = book.isbn
            %br/
            = book.page_count
            %br/
            = book.average_rating
            %br/
            = book.description
