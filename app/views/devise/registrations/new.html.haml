!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
  %body
    .full-login
      .left-login
        .login-container
          %h2 Sign up
          = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
            = render "devise/shared/error_messages", resource: resource
            .mb-3
              = f.label :email
              = f.email_field :email, autofocus: true, placeholder: "example@email.com", autocomplete: "email"
            .mb-3
              = f.label :password
              - if @minimum_password_length
                %em
                  (#{@minimum_password_length} characters minimum)
              = f.password_field :password, placeholder: "Enter your password", autocomplete: "new-password"
            .mb-3
              = f.label :password_confirmation
              = f.password_field :password_confirmation, placeholder: "Enter your password", autocomplete: "new-password"
            .actions
              = f.submit "Sign up"
          .links
            = render "devise/shared/links"
      .right-img
        = image_tag("dark_books.jpg", size: "160x100")
